<p id="notice"><%= notice %></p>

<h1>Alumnis</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Major</th>
      <th>Year graduated</th>
      <th>Bio</th>
      <th>Image file</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnis.each do |alumni| %>
      <tr>
        <td><%= alumni.first_name %></td>
        <td><%= alumni.last_name %></td>
        <td><%= alumni.title %></td>
        <td><%= alumni.major %></td>
        <td><%= alumni.year_graduated %></td>
        <td><%= alumni.bio %></td>
        <td><%= alumni.image_file %></td>
        <td><%= link_to 'Show', alumni %></td>
        <td><%= link_to 'Edit', edit_alumni_path(alumni) %></td>
        <td><%= link_to 'Destroy', alumni, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

